<script>
  // Convert initial PHP/Twig tickets to JS structure
  const initialTickets = {{ tickets|json_encode()|raw }} || [];

  // Local client-side state
  let tickets = initialTickets.map(t => ({
    id: t.id ?? (Math.floor(Math.random()*1000000)),
    subject: t.subject ?? '',
    description: t.description ?? '',
    priority: t.priority ?? 'Medium',
    status: t.status ?? 'Open',
    assigned_to: t.assigned_to ?? (t.assignee ?? t.assignee_name ?? ''),
    date: t.date ?? (t.created_at ? t.created_at.split(' ')[0] : (new Date()).toISOString().slice(0,10))
  }));

  // Utility: show toast
  function showToast(message, type = 'success') {
    const toast = document.getElementById('toast');
    toast.className = '';
    toast.classList.add('fixed','right-6','top-6','z-50','px-4','py-2','rounded-lg','shadow-lg','text-sm');
    toast.classList.add(type === 'error' ? 'bg-red-600' : 'bg-green-600');
    toast.textContent = message;
    toast.classList.remove('hidden');
    setTimeout(() => {
      toast.classList.add('hidden');
    }, 3000);
  }

  // Render tickets as cards
  function renderTickets(filterStatus = '') {
    const grid = document.getElementById('cardsGrid');
    const noMsg = document.getElementById('noTicketsMsg');
    grid.innerHTML = '';

    const filtered = filterStatus ? tickets.filter(t => t.status === filterStatus) : tickets;

    if (filtered.length === 0) {
      noMsg.classList.remove('hidden');
    } else {
      noMsg.classList.add('hidden');
    }

    filtered.forEach(t => {
      const card = document.createElement('div');
      card.className = 'bg-white rounded-xl shadow-md p-5 hover:shadow-lg transition border border-gray-100 relative';
      card.id = 'ticket-' + t.id;

      const statusBadge = (() => {
        if (t.status === 'Open') return '<span class="px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-700">'+t.status+'</span>';
        if (t.status === 'In Progress') return '<span class="px-3 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-700">'+t.status+'</span>';
        if (t.status === 'Closed') return '<span class="px-3 py-1 rounded-full text-xs font-medium bg-gray-200 text-gray-700">'+t.status+'</span>';
        return '<span class="px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-700">'+t.status+'</span>';
      })();

      card.innerHTML = `
        <div class="flex justify-between items-start">
          <h3 class="text-lg font-semibold text-gray-800">${escapeHtml(t.subject)}</h3>
          ${statusBadge}
        </div>
        <p class="text-sm text-gray-600 mt-2">${escapeHtml(t.description)}</p>
        <div class="flex justify-between items-center mt-4 text-sm text-gray-500">
          <p><span class="font-semibold text-gray-700">Priority:</span> ${escapeHtml(t.priority)}</p>
          <p><span class="font-semibold text-gray-700">Assignee:</span> ${escapeHtml(t.assigned_to || 'Unassigned')}</p>
        </div>
        <div class="flex justify-between mt-5">
          <button onclick="openEditModal('${t.id}')" class="text-blue-600 hover:underline text-sm font-medium">Edit</button>
          <button onclick="openConfirmDelete('${t.id}')" class="text-red-600 hover:underline text-sm font-medium">Delete</button>
        </div>
      `;

      grid.appendChild(card);
    });
  }

  // Escape helper to prevent inline-HTML issues
  function escapeHtml(text) {
    if (text === null || text === undefined) return '';
    return String(text)
      .replace(/&/g, '&amp;')
      .replace(/</g, '&lt;')
      .replace(/>/g, '&gt;')
      .replace(/"/g, '&quot;')
      .replace(/'/g, '&#039;');
  }

  // Initial render
  renderTickets();

  // Filter logic
  document.getElementById('filterStatus')?.addEventListener('change', function() {
    renderTickets(this.value);
  });

  // Modal helpers
  function openTicketModal() {
    document.getElementById('createForm').reset();
    hideCreateErrors();
    document.getElementById('ticketModal').classList.remove('hidden');
  }
  function closeTicketModal() {
    document.getElementById('ticketModal').classList.add('hidden');
  }

  function openEditModal(id) {
    const t = tickets.find(x => String(x.id) === String(id));
    if (!t) return showToast('Ticket not found', 'error');
    document.getElementById('editId').value = t.id;
    document.getElementById('editSubject').value = t.subject;
    document.getElementById('editDescription').value = t.description;
    document.getElementById('editPriority').value = t.priority;
    document.getElementById('editStatus').value = t.status;
    document.getElementById('editAssignedTo').value = t.assigned_to;
    hideEditErrors();
    document.getElementById('editModal').classList.remove('hidden');
  }
  function closeEditModal() {
    document.getElementById('editModal').classList.add('hidden');
  }

  // Delete confirm modal
  let deleteId = null;
  function openConfirmDelete(id) {
    const t = tickets.find(x => String(x.id) === String(id));
    if (!t) return showToast('Ticket not found', 'error');
    deleteId = id;
    document.getElementById('deleteTicketName').textContent = t.subject;
    document.getElementById('deleteModal').classList.remove('hidden');
  }
  function closeDeleteModal() {
    deleteId = null;
    document.getElementById('deleteModal').classList.add('hidden');
  }
  document.getElementById('confirmDeleteBtn')?.addEventListener('click', function() {
    if (!deleteId) return;
    tickets = tickets.filter(x => String(x.id) !== String(deleteId));
    renderTickets(document.getElementById('filterStatus')?.value || '');
    showToast('Ticket deleted.');
    closeDeleteModal();
  });

  // Create handler with client-side validation
  function showCreateErrors(subjectErr, descErr, prioErr) {
    const es = document.getElementById('errSubject');
    const ed = document.getElementById('errDescription');
    const ep = document.getElementById('errPriority');
    es.classList.toggle('hidden', !subjectErr);
    ed.classList.toggle('hidden', !descErr);
    ep.classList.toggle('hidden', !prioErr);
  }
  function hideCreateErrors() {
    showCreateErrors(false,false,false);
  }

  function handleCreate(e) {
    e.preventDefault();
    const subject = document.getElementById('createSubject').value.trim();
    const description = document.getElementById('createDescription').value.trim();
    const priority = document.getElementById('createPriority').value;
    const assigned = document.getElementById('createAssignedTo').value;

    const hasSubjectErr = !subject;
    const hasDescErr = !description;
    const hasPrioErr = !priority;

    showCreateErrors(hasSubjectErr, hasDescErr, hasPrioErr);
    if (hasSubjectErr || hasDescErr || hasPrioErr) {
      showToast('Please correct the highlighted fields.', 'error');
      return false;
    }

    // Create new client-side ticket
    const newTicket = {
      id: String(Math.floor(Math.random()*1000000000)),
      subject,
      description,
      priority,
      status: 'Open',
      assigned_to: assigned,
      date: (new Date()).toISOString().slice(0,10)
    };
    tickets.unshift(newTicket); // show newest first
    renderTickets(document.getElementById('filterStatus')?.value || '');
    closeTicketModal();
    showToast('Ticket created successfully.');
    return false;
  }

  // Edit handler with validation
  function showEditErrors(sErr, dErr, pErr) {
    document.getElementById('errEditSubject').classList.toggle('hidden', !sErr);
    document.getElementById('errEditDescription').classList.toggle('hidden', !dErr);
    document.getElementById('errEditPriority').classList.toggle('hidden', !pErr);
  }
  function hideEditErrors() { showEditErrors(false,false,false); }

  function handleEdit(e) {
    e.preventDefault();
    const id = document.getElementById('editId').value;
    const subject = document.getElementById('editSubject').value.trim();
    const description = document.getElementById('editDescription').value.trim();
    const priority = document.getElementById('editPriority').value;
    const status = document.getElementById('editStatus').value;
    const assigned = document.getElementById('editAssignedTo').value;

    const sErr = !subject;
    const dErr = !description;
    const pErr = !priority;
    showEditErrors(sErr,dErr,pErr);
    if (sErr || dErr || pErr) {
      showToast('Please correct the highlighted fields.', 'error');
      return false;
    }

    const idx = tickets.findIndex(x => String(x.id) === String(id));
    if (idx === -1) {
      showToast('Ticket not found', 'error');
      return false;
    }

    tickets[idx].subject = subject;
    tickets[idx].description = description;
    tickets[idx].priority = priority;
    tickets[idx].status = status;
    tickets[idx].assigned_to = assigned;
    tickets[idx].date = (new Date()).toISOString().slice(0,10);

    renderTickets(document.getElementById('filterStatus')?.value || '');
    closeEditModal();
    showToast('Ticket updated successfully.');
    return false;
  }

  // Hide toast after 3s (already handled in showToast)
  // Mobile menu and sidebar toggles (existing)
  document.getElementById('mobileMenuBtn')?.addEventListener('click', () => {
    const menu = document.getElementById('mobileMenu');
    if (menu) menu.classList.toggle('hidden');
  });
  document.getElementById('sidebarToggle')?.addEventListener('click', () => {
    const nav = document.getElementById('sidebarNav');
    if (nav) nav.classList.toggle('hidden');
  });

  // Ensure initial UI state (show no-tickets message if empty)
  (function init() {
    renderTickets();
  })();
</script>
