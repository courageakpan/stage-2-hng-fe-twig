<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TicketPro</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      .clip-path-wave {
        clip-path: polygon(0 75%, 100% 55%, 100% 100%, 0 100%);
      }
    </style>
  </head>

  <body class="min-h-screen bg-gray-100 text-gray-800 relative">
    <div class="max-w-[1440px] mx-auto min-h-screen">
    <!-- Decorative Circles -->
    <div class="absolute top-10 -left-10 w-40 h-40 bg-blue-200 rounded-full opacity-60 z-0"></div>
    <div class="absolute bottom-20 -right-10 w-56 h-56 bg-blue-300 rounded-full opacity-50 z-0"></div>

<!-- Header -->
{% if page == 'landing' %}
<header class="bg-white shadow-sm py-4 px-6 md:px-10 flex justify-between items-center relative z-10">
  <h1 class="text-xl sm:text-2xl font-bold text-blue-600">TicketPro</h1>
  <nav class="hidden sm:flex space-x-4 sm:space-x-6">
    <a href="?page=login" class="text-gray-700 hover:text-blue-600 font-medium">Login</a>
    <a href="?page=signup" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition">Get Started</a>
  </nav>
  <button class="sm:hidden text-blue-600 text-xl font-bold" id="mobileMenuBtn">‚ò∞</button>
</header>

<div id="mobileMenu" class="hidden absolute top-full left-0 w-full bg-white shadow-md flex flex-col space-y-2 p-4 sm:hidden z-20">
  <a href="?page=signup" class="py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">Get Started</a>
  <a href="?page=login" class="py-2 text-left text-gray-700 hover:text-blue-600">Login</a>
</div>
{% endif %}

<!-- Landing -->
{% if page == 'landing' %}
<section class="flex flex-col items-center justify-center text-center px-6 py-24 sm:py-32 md:py-40 relative overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-b from-blue-50 to-white clip-path-wave z-0"></div>
  <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-800 mb-6 relative z-10">
    Manage Support Tickets Easily
  </h2>
  <p class="text-gray-600 mb-10 relative z-10 max-w-xl text-sm sm:text-base">
    Streamline your ticket workflow with TicketPro. Create, manage, and resolve tickets efficiently.
  </p>
  <div class="relative z-10 flex flex-col sm:flex-row gap-4">
    <a href="?page=signup" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition w-full sm:w-auto">Sign Up Free</a>
    <a href="?page=login" class="bg-gray-200 text-gray-700 px-6 py-3 rounded-lg hover:bg-gray-300 transition w-full sm:w-auto">Login</a>
  </div>
</section>
{% endif %}

<!-- Login -->
{% if page == 'login' %}
<section class="flex items-center justify-center px-4 py-16 sm:py-20">
  <div class="bg-white shadow-lg rounded-xl p-6 sm:p-8 w-full max-w-sm sm:max-w-md">
    <h2 class="text-xl sm:text-2xl font-bold text-center mb-6">Login</h2>
    {% if success %}
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">{{ success }}</div>
    {% endif %}
    {% if error %}
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">{{ error }}</div>
    {% endif %}
    <form method="post" class="space-y-4">
      <input type="email" name="email" placeholder="Email" required class="w-full border rounded-lg p-3 focus:ring-2 focus:ring-blue-500" />
      <input type="password" name="password" placeholder="Password" required class="w-full border rounded-lg p-3 focus:ring-2 focus:ring-blue-500" />
      <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700 transition">Login</button>
    </form>
    <div class="mt-4 p-3 bg-gray-50 rounded-lg text-sm">
      <p class="font-semibold text-gray-700 mb-2">üîê First time here?</p>
      <p class="text-gray-600 text-xs mb-3">Create your own account to get started with TicketPro. It's quick and easy!</p>
      <div class="bg-blue-50 border border-blue-200 rounded p-2 mb-3">
        <p class="text-xs text-blue-700"><strong>üí° Tip:</strong> New users get full access to create and manage tickets</p>
      </div>
      <details class="mt-2">
        <summary class="cursor-pointer text-xs text-gray-500 hover:text-gray-700">üîß Demo accounts (for testing)</summary>
        <div class="mt-2 p-2 bg-white rounded border">
          <ul class="space-y-1 text-xs text-gray-600">
            <li><strong>Admin:</strong> john@example.com / password</li>
            <li><strong>Agent:</strong> jane@example.com / password</li>
            <li><strong>User:</strong> tom@example.com / password</li>
          </ul>
        </div>
      </details>
    </div>
    <p class="text-center text-sm text-gray-500 mt-4">
      Don't have an account?
      <a href="/signup" class="text-blue-600 hover:underline">Sign up</a>
    </p>
  </div>
</section>
{% endif %}

<!-- Signup -->
{% if page == 'signup' %}
<section class="flex items-center justify-center px-4 py-16 sm:py-20">
  <div class="bg-white shadow-lg rounded-xl p-6 sm:p-8 w-full max-w-sm sm:max-w-md">
    <div class="text-center mb-6">
      <h2 class="text-xl sm:text-2xl font-bold text-gray-800 mb-2">Create Your Account</h2>
      <p class="text-sm text-gray-600">Join TicketPro and start managing tickets efficiently</p>
    </div>
    
    <div class="mb-4 p-3 bg-green-50 border border-green-200 rounded-lg">
      <p class="text-xs text-green-700">‚úÖ <strong>Free forever</strong> - No credit card required</p>
    </div>
    
    {% if error %}
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">{{ error }}</div>
    {% endif %}
    
    <form method="post" class="space-y-4">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
        <input type="text" name="name" placeholder="Enter your full name" required class="w-full border rounded-lg p-3 focus:ring-2 focus:ring-blue-500" />
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
        <input type="email" name="email" placeholder="you@example.com" required class="w-full border rounded-lg p-3 focus:ring-2 focus:ring-blue-500" />
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
        <input type="password" name="password" placeholder="Create a strong password" required class="w-full border rounded-lg p-3 focus:ring-2 focus:ring-blue-500" />
        <p class="text-xs text-gray-500 mt-1">Use 8+ characters for better security</p>
      </div>
      <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700 transition font-medium">Create Account</button>
    </form>
    
    <div class="mt-6 p-3 bg-blue-50 rounded-lg text-xs">
      <p class="font-semibold text-blue-800 mb-1">üéØ What you get:</p>
      <ul class="space-y-1 text-blue-700">
        <li>‚Ä¢ Create and manage unlimited tickets</li>
        <li>‚Ä¢ Assign tickets to team members</li>
        <li>‚Ä¢ Track ticket status and priority</li>
        <li>‚Ä¢ Real-time dashboard analytics</li>
      </ul>
    </div>
    
    <p class="text-center text-sm text-gray-500 mt-4">
      Already have an account?
      <a href="?page=login" class="text-blue-600 hover:underline font-medium">Login here</a>
    </p>
  </div>
</section>
{% endif %}

<!-- Dashboard & Tickets -->
{% if page == 'dashboard' or page == 'tickets' %}
<div class="flex flex-col md:flex-row min-h-screen relative z-10">
  <!-- Sidebar -->
  <aside class="w-full md:w-64 bg-white shadow-md flex flex-col md:h-auto order-last md:order-first">
    <div class="p-4 md:p-6 border-b flex justify-between items-center md:block">
      <h1 class="text-xl md:text-2xl font-bold text-blue-600">TicketPro</h1>
      <button class="md:hidden text-gray-600 text-xl" id="sidebarToggle">‚ò∞</button>
    </div>
    <nav id="sidebarNav" class="hidden md:block flex-1 p-4 space-y-2">
      <a href="?page=dashboard" class="block w-full text-left py-2 px-4 rounded-lg font-medium {{ page == 'dashboard' ? 'bg-blue-50 text-blue-600' : 'hover:bg-gray-100' }}">Dashboard</a>
      <a href="?page=tickets" class="block w-full text-left py-2 px-4 rounded-lg font-medium {{ page == 'tickets' ? 'bg-blue-50 text-blue-600' : 'hover:bg-gray-100' }}">Tickets</a>
    </nav>
    <div class="p-4 border-t">
      <a href="?page=landing" class="w-full py-2 block text-center bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">Logout</a>
    </div>
  </aside>

  <!-- Main -->
  <main class="flex-1 flex flex-col">
    <header class="bg-white shadow-sm py-4 px-6 sm:px-8 flex justify-between items-center">
      <h2 class="text-lg sm:text-xl font-semibold capitalize">{{ page }}</h2>
      <nav class="hidden sm:flex space-x-6">
        <a href="?page=tickets" class="text-gray-700 hover:text-blue-600 font-medium">Tickets</a>
        <a href="#" class="text-gray-700 hover:text-blue-600 font-medium">Settings</a>
      </nav>
    </header>

    {% if page == 'dashboard' %}
    <section class="p-6 sm:p-8 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-blue-500">
        <h3 class="text-gray-500 text-sm mb-2">Total Tickets</h3>
        <p class="text-3xl font-bold">{{ stats.total ?? 0 }}</p>
      </div>
      <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-green-500">
        <h3 class="text-gray-500 text-sm mb-2">Open Tickets</h3>
        <p class="text-3xl font-bold">{{ stats.open ?? 0 }}</p>
      </div>
      <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-yellow-500">
        <h3 class="text-gray-500 text-sm mb-2">In Progress</h3>
        <p class="text-3xl font-bold">{{ stats.in_progress ?? 0 }}</p>
      </div>
      <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-gray-400">
        <h3 class="text-gray-500 text-sm mb-2">Closed Tickets</h3>
        <p class="text-3xl font-bold">{{ stats.closed ?? 0 }}</p>
      </div>
    </section>
    {% endif %}

    {% if page == 'tickets' %}
    <section class="p-6 sm:p-8 overflow-x-auto">
      <div class="bg-white rounded-xl shadow-md overflow-hidden min-w-[700px]">
        <div class="flex flex-col sm:flex-row justify-between items-center border-b p-4 gap-4">
          <h3 class="text-lg font-semibold">Manage Tickets</h3>
          <button onclick="openTicketModal()" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition">+ New Ticket</button>
        </div>
        <table class="min-w-full text-left text-sm">
          <thead class="bg-gray-50 border-b text-gray-600">
            <tr>
              <th class="py-3 px-6">ID</th>
              <th class="py-3 px-6">Subject</th>
              <th class="py-3 px-6">Priority</th>
              <th class="py-3 px-6">Assignee</th>
              <th class="py-3 px-6">Status</th>
              <th class="py-3 px-6">Last Updated</th>
            </tr>
          </thead>
          <tbody>
            {% for t in tickets %}
            <tr class="border-b hover:bg-gray-50">
              <td class="py-3 px-6 font-medium">{{ t.id }}</td>
              <td class="py-3 px-6">{{ t.subject }}</td>
              <td class="py-3 px-6">
                <span class="px-3 py-1 text-xs font-medium rounded-full {{ t.priorityClass }}">{{ t.priority }}</span>
              </td>
              <td class="py-3 px-6">{{ t.assignee }}</td>
              <td class="py-3 px-6">
                <span class="px-3 py-1 text-xs font-medium rounded-full {{ t.statusClass }}">{{ t.status }}</span>
              </td>
              <td class="py-3 px-6">{{ t.date }}</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </section>
    {% endif %}
  </main>
</div>
{% endif %}

<!-- Footer -->
{% if page == 'landing' %}
<footer class="bg-white py-6 text-center text-gray-500 mt-16 relative z-10 border-t">
  <p>¬© {{ "now"|date("Y") }} TicketPro. All rights reserved.</p>
</footer>
{% endif %}

<!-- New Ticket Modal -->
<div id="ticketModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
    <div class="mt-3">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Create New Ticket</h3>
      <form action="?page=tickets&action=create" method="post" class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Subject</label>
          <input type="text" name="subject" required class="w-full border rounded-lg p-2 focus:ring-2 focus:ring-blue-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
          <textarea name="description" rows="3" required class="w-full border rounded-lg p-2 focus:ring-2 focus:ring-blue-500"></textarea>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Priority</label>
          <select name="priority" class="w-full border rounded-lg p-2 focus:ring-2 focus:ring-blue-500">
            <option value="Low">Low</option>
            <option value="Medium" selected>Medium</option>
            <option value="High">High</option>
            <option value="Critical">Critical</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Assign To</label>
          <select name="assigned_to" class="w-full border rounded-lg p-2 focus:ring-2 focus:ring-blue-500">
            <option value="">Unassigned</option>
            {% for agent in agents %}
            <option value="{{ agent.id }}">{{ agent.name }}</option>
            {% endfor %}
          </select>
        </div>
        <div class="flex justify-end space-x-3">
          <button type="button" onclick="closeTicketModal()" class="bg-gray-300 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-400 transition">Cancel</button>
          <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition">Create Ticket</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Edit Ticket Modal -->
<div id="editModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
    <div class="mt-3">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Edit Ticket</h3>
      <form id="editForm" action="?page=tickets&action=update" method="post" class="space-y-4">
        <input type="hidden" name="ticket_id" id="editTicketId">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Subject</label>
          <input type="text" name="subject" id="editSubject" required class="w-full border rounded-lg p-2 focus:ring-2 focus:ring-blue-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
          <textarea name="description" id="editDescription" rows="3" required class="w-full border rounded-lg p-2 focus:ring-2 focus:ring-blue-500"></textarea>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Priority</label>
          <select name="priority" id="editPriority" class="w-full border rounded-lg p-2 focus:ring-2 focus:ring-blue-500">
            <option value="Low">Low</option>
            <option value="Medium">Medium</option>
            <option value="High">High</option>
            <option value="Critical">Critical</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
          <select name="status" id="editStatus" class="w-full border rounded-lg p-2 focus:ring-2 focus:ring-blue-500">
            <option value="Open">Open</option>
            <option value="In Progress">In Progress</option>
            <option value="Closed">Closed</option>
            <option value="Resolved">Resolved</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Assign To</label>
          <select name="assigned_to" id="editAssignedTo" class="w-full border rounded-lg p-2 focus:ring-2 focus:ring-blue-500">
            <option value="">Unassigned</option>
            {% for agent in agents %}
            <option value="{{ agent.id }}">{{ agent.name }}</option>
            {% endfor %}
          </select>
        </div>
        <div class="flex justify-end space-x-3">
          <button type="button" onclick="closeEditModal()" class="bg-gray-300 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-400 transition">Cancel</button>
          <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition">Update Ticket</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
    <div class="mt-3 text-center">
      <svg class="w-16 h-16 mx-auto text-red-500 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h.638a2 2 0 002 2v10a2 2 0 002-2h-4.638a2 2 0 00-2-2V9a2 2 0 00-2-2h-4.638z"></path>
      </svg>
      <h3 class="text-lg font-medium text-gray-900 mb-2">Delete Ticket</h3>
      <p class="text-gray-600 mb-4">Are you sure you want to delete this ticket? This action cannot be undone.</p>
      <p class="text-sm font-medium text-gray-800 mb-6" id="deleteTicketName"></p>
      <div class="flex justify-center space-x-3">
        <button onclick="closeDeleteModal()" class="bg-gray-300 text-gray-700 px-6 py-3 rounded-lg hover:bg-gray-400 transition">Cancel</button>
        <button onclick="deleteTicket()" class="bg-red-600 text-white px-6 py-3 rounded-lg hover:bg-red-700 transition">Delete Ticket</button>
      </div>
    </div>
  </div>
</div>

<script>
  let deleteTicketId = null;
  
  function openTicketModal() {
    document.getElementById('ticketModal').classList.remove('hidden');
  }
  
  function closeTicketModal() {
    document.getElementById('ticketModal').classList.add('hidden');
  }
  
  function editTicket(id, subject, description, priority, status, assignedTo) {
    document.getElementById('editTicketId').value = id;
    document.getElementById('editSubject').value = subject;
    document.getElementById('editDescription').value = description;
    document.getElementById('editPriority').value = priority;
    document.getElementById('editStatus').value = status;
    document.getElementById('editAssignedTo').value = assignedTo;
    document.getElementById('editModal').classList.remove('hidden');
  }
  
  function closeEditModal() {
    document.getElementById('editModal').classList.add('hidden');
  }
  
  function confirmDelete(id, subject) {
    deleteTicketId = id;
    document.getElementById('deleteTicketName').textContent = subject;
    document.getElementById('deleteModal').classList.remove('hidden');
  }
  
  function closeDeleteModal() {
    document.getElementById('deleteModal').classList.add('hidden');
    deleteTicketId = null;
  }
  
  function deleteTicket() {
    if (deleteTicketId) {
      window.location.href = '?page=tickets&action=delete&id=' + deleteTicketId;
    }
  }
  
  function hideToast() {
    const toast = document.getElementById('toast');
    if (toast) {
      toast.classList.add('translate-x-full');
      setTimeout(() => {
        toast.classList.add('hidden');
      }, 3000);
    }
  }
  
  // Hide toast after 3 seconds
  setTimeout(() => {
    hideToast();
  }, 3000);
  
  document.getElementById('mobileMenuBtn')?.addEventListener('click', () => {
    const menu = document.getElementById('mobileMenu');
    menu.classList.toggle('hidden');
  });
  document.getElementById('sidebarToggle')?.addEventListener('click', () => {
    const nav = document.getElementById('sidebarNav');
    nav.classList.toggle('hidden');
  });
</script>
    </div>
  </body>
</html>